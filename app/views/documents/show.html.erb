<%= content_for(:title, "TRLN Record Viewer: #{@doc.id}") %>
<header class="<%= @doc.owner %>">
  <h1>ID: <%= @doc.id %></h1>
  <h3>Local ID: <%= @doc.local_id %></h3>
</header>
<div class="main">
  <h3>Collection: <%= @doc.collection %></h3>
  <div class="metadata bibliographic">
    <dl>
      <dt>Title</dt>
       <dd>
        <dl>
          <dt>Main</dt>
          <dd><%= @content.title.main.value %></dd>
        </dl>
       </dd>
      <% if @content.authors and @content.authors.main %>
        <dt>Author(s)</dt>
          <% @content.authors.main.each do |author| %>
              <dd><%= author.name %></dd>
          <% end %>
      <% end %>
      <% if @content.isbn %>
      <dl>
        <dt>ISBN</dt>
        <% @content.isbn.each do |isbn| %>
          <dd><%= isbn %></dd>
         <% end %>
      </dl>
      <% end %>

    <% if @content.subjects %>

            <dt>Subjects</dt>
            <dd>
              <ul>
                <% @content.subjects.each do |subject| %>
                <li class="subject"><%= subject %></li>
                     <% end %>
              </ul>
            </dd>
    <% end %>
    </dl>
  <%= link_to('Argot/JSON format', :format => :json) %>

    <pre><%= pretty_json(@doc)  %></pre>
  </div>
</div>